<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="?android:attr/windowBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Medicine"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp"/>

        <!-- Medicine Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medicine Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/medicine_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Medicine Name"
            android:textSize="16sp"
            android:padding="10dp"
            android:background="@drawable/border"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Illness Type"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/illness_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Illness Type"
            android:textSize="16sp"
            android:padding="10dp"
            android:background="@drawable/border"
            android:layout_marginBottom="12dp"/>

        <!-- Time to Take Medicine -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time to Take Medicine"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/black"/>

        <TimePicker
            android:id="@+id/time_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:timePickerMode="spinner"/>

        <!-- Days to Take Medicine -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Days to Take Medicine"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="2"
            android:padding="10dp"
            android:layout_marginBottom="16dp">

            <CheckBox
                android:id="@+id/sunday_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sun"/>

            <CheckBox
                android:id="@+id/monday_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mon"/>

            <CheckBox
                android:id="@+id/tuesday_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tue"/>

            <CheckBox
                android:id="@+id/wednesday_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wed"/>

            <CheckBox
                android:id="@+id/thursday_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thu"/>

            <CheckBox
                android:id="@+id/friday_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fri"/>

            <CheckBox
                android:id="@+id/saturday_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sat"/>

            <CheckBox
                android:id="@+id/all_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"/>
        </GridLayout>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADD MEDICINE"
            android:layout_marginTop="24dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/black"
            style="@style/Widget.MaterialComponents.Button"
            app:cornerRadius="12dp"
            android:elevation="8dp"
            android:stateListAnimator="@animator/button_anim" />
    </LinearLayout>
</ScrollView>
